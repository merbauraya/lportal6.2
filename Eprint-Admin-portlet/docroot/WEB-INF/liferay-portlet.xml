<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>Eprint Admin</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>
			com.idetronic.eprint.admin.EprintConfigAction 
        </configuration-action-class>   
		<indexer-class>com.idetronic.eprint.admin.search.EprintIndexer</indexer-class>
		<open-search-class>
			com.idetronic.eprint.admin.search.EprintOpenSearchImpl
		</open-search-class>
		<scheduler-entry>
			<scheduler-event-listener-class>
				com.idetronic.eprint.admin.EprintGenerator
			</scheduler-event-listener-class>
			
			<trigger>
				<cron>
					<cron-trigger-value>
						0 00 03 ? * TUE-SAT
					</cron-trigger-value> 
					
				</cron> <!-- 
				<simple>
                                        <simple-trigger-value>5</simple-trigger-value>
                                        <time-unit>minute</time-unit>
                                </simple> -->
				
			</trigger>
		</scheduler-entry>
		

		
		
		<control-panel-entry-category>content</control-panel-entry-category>
		<control-panel-entry-weight>1.5</control-panel-entry-weight>
		<asset-renderer-factory>
			com.idetronic.eprint.asset.EprintAssetRendererFactory
		</asset-renderer-factory>
		<preferences-unique-per-layout>false</preferences-unique-per-layout>
		<instanceable>false</instanceable>
		
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>eprint admin-portlet</css-class-wrapper>
	
	</portlet>


	<portlet>
		<portlet-name>eprintview</portlet-name>
		<icon>/icon.png</icon>
		
		<configuration-action-class>
			com.idetronic.eprint.EprintConfigAction
        </configuration-action-class>   
        <friendly-url-mapper-class>
                        com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper
        </friendly-url-mapper-class>
        <friendly-url-mapping>eprint</friendly-url-mapping>
        <friendly-url-routes>META-INF/routes.xml</friendly-url-routes>
		
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>eprintview-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>